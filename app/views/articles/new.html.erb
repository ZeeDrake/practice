<h1> Add new: Post</h1>
<%= form_for @article do |f| %>
	<p>
		<%= f.label :tile %><br />
		<%= f.text_field :tile %><br />
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %><br />
	</p>
		<%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Selection One"} %><br />
	</p>
	<p>
		<%= f.submit "Add Post" %>
	</p>
<% end %>